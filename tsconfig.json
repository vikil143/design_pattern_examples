{
  "compilerOptions": {
    "module": "AMD",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outFile": "./dist/bundle.js",
    "outDir": "./dist",
    "sourceMap": true,    
    "strict": true,
    "moduleResolution":"node",
  },
  "include": ["src/**/*.ts", "server.js", "src/js/apps/todos/index.js"],
  "exclude": ["node_modules"],
  "lib": ["es6"],
  "target": "es5",
  "files": ["./index.ts"]
}
